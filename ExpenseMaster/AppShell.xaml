<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpenseMaster.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExpenseMaster"
    xmlns:pages="clr-namespace:ExpenseMaster.Pages"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Main"
             Icon="dotnet_bot.svg">
        <Tab>
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate pages:MainPage}"
                Route="MainPage"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Expenses"
             Icon="dotnet_bot.svg">
        <Tab>
            <ShellContent
                Title="Search"
                ContentTemplate="{DataTemplate pages:ExpensesCategory}"
                Route="AnotherPage" />
        </Tab>
    </FlyoutItem>
    

</Shell>
